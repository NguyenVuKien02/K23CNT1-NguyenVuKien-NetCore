@model NvkLesson08.Models.NvkAccount

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<h3>Account</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="NvkCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NvkFullName" class="control-label"></label>
                <input asp-for="NvkFullName" class="form-control" />
                <span asp-validation-for="NvkFullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NvkEmail" class="control-label"></label>
                <input asp-for="NvkEmail" class="form-control" />
                <span asp-validation-for="NvkEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NvkPhone" class="control-label"></label>
                <input asp-for="NvkPhone" class="form-control" />
                <span asp-validation-for="NvkPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NvkAddress" class="control-label"></label>
                <input asp-for="NvkAddress" class="form-control" />
                <span asp-validation-for="NvkAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NvkAvatar" class="control-label"></label>
                <input asp-for="NvkAvatar" class="form-control" />
                <span asp-validation-for="NvkAvatar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NvkBirthday" class="control-label"></label>
                <input asp-for="NvkBirthday" class="form-control" />
                <span asp-validation-for="NvkBirthday" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NvkGender" class="control-label"></label>
                <input asp-for="NvkGender" class="form-control" />
                <span asp-validation-for="NvkGender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NvkPassword" class="control-label"></label>
                <input asp-for="NvkPassword" class="form-control" />
                <span asp-validation-for="NvkPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NvkFacebook" class="control-label"></label>
                <input asp-for="NvkFacebook" class="form-control" />
                <span asp-validation-for="NvkFacebook" class="text-danger"></span>
            </div>

            <input name="__RequestVerificationToken" type="hidden" value="" />

            <button type="submit" class="btn btn-primary">💾 Lưu</button>
            <a href="/NvkAccount/NvkIndexAccount" class="btn btn-secondary ms-2">⬅ Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
