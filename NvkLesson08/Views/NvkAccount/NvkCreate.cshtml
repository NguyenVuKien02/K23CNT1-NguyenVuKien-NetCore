<h2 class="mb-3 text-primary fw-bold">Tạo tài khoản mới</h2>
<h5 class="mb-4 text-muted">Thông tin Account</h5>

<div class="row">
    <div class="col-md-6">
        <form asp-action="NvkCreate" enctype="multipart/form-data" class="p-4 border rounded shadow-sm bg-light">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="NvkFullName" class="form-label fw-bold"></label>
                <input asp-for="NvkFullName" class="form-control" />
                <span asp-validation-for="NvkFullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NvkEmail" class="form-label fw-bold"></label>
                <input asp-for="NvkEmail" class="form-control" />
                <span asp-validation-for="NvkEmail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NvkPhone" class="form-label fw-bold"></label>
                <input asp-for="NvkPhone" class="form-control" />
                <span asp-validation-for="NvkPhone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NvkAddress" class="form-label fw-bold"></label>
                <input asp-for="NvkAddress" class="form-control" />
                <span asp-validation-for="NvkAddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NvkAvatar" class="form-label fw-bold"></label>
                <input asp-for="NvkAvatar" class="form-control" type="file" name="NvkAvatarFile" />
                <span asp-validation-for="NvkAvatar" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NvkBirthday" class="form-label fw-bold"></label>
                <input asp-for="NvkBirthday" class="form-control" />
                <span asp-validation-for="NvkBirthday" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Giới tính</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="NvkGender" value="1" id="genderMale" />
                    <label class="form-check-label" for="genderMale">♂️ Nam</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="NvkGender" value="2" id="genderFemale" />
                    <label class="form-check-label" for="genderFemale">♀️ Nữ</label>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="NvkPassword" class="form-label fw-bold"></label>
                <input asp-for="NvkPassword" class="form-control" />
                <span asp-validation-for="NvkPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NvkFacebook" class="form-label fw-bold"></label>
                <input asp-for="NvkFacebook" class="form-control" />
                <span asp-validation-for="NvkFacebook" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success rounded-pill px-4 py-2 fw-bold">
                    💾 Lưu
                </button>
                <a href="/NvkAccount/NvkIndexAccount" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-bold ms-2 text-decoration-none">
                    ⬅ Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}