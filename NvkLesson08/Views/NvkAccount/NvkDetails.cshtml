@model NvkLesson08.Models.NvkAccount

@{
    ViewData["Title"] = "NvkDetails";
    Layout = "~/Views/Shared/_NvkLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thông tin chi tiết Account</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">ID:</div>
                <div class="col-sm-9">@Model.NvkId</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Họ tên:</div>
                <div class="col-sm-9">@Model.NvkFullName</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Email:</div>
                <div class="col-sm-9">@Model.NvkEmail</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Điện thoại:</div>
                <div class="col-sm-9">@Model.NvkPhone</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Địa chỉ:</div>
                <div class="col-sm-9">@Model.NvkAddress</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Ảnh đại diện:</div>
                <div class="col-sm-9">
                    <img src="~/images/@Model.NvkAvatar" class="rounded" width="120" height="120" style="object-fit: cover;" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Ngày sinh:</div>
                <div class="col-sm-9">@Model.NvkBirthday</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Giới tính:</div>
                <div class="col-sm-9">
                    <span class="badge rounded-pill @(Model.NvkGender == 1 ? "bg-primary" : "bg-danger")">
                        <i class="bi @(Model.NvkGender == 1 ? "bi-gender-male" : "bi-gender-female")"></i>
                        @(Model.NvkGender == 1 ? "Nam" : "Nữ")
                    </span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Mật khẩu:</div>
                <div class="col-sm-9">@Model.NvkPassword</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Facebook:</div>
                <div class="col-sm-9">@Model.NvkFacebook</div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="NvkIndexAccount" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
