@model NvkLesson08.Models.NvkAccount
@{
    ViewData["Title"] = "NvkEdit";
    Layout = "~/Views/Shared/_NvkLayout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">✏️ Chỉnh sửa thông tin Account</h4>
        </div>
        <div class="card-body">
            <form asp-action="NvkEdit" asp-route-id="@Model.NvkId" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">ID</label>
                    <input asp-for="NvkId" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="NvkFullName" class="form-label fw-bold"></label>
                    <input asp-for="NvkFullName" class="form-control" />
                    <span asp-validation-for="NvkFullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NvkEmail" class="form-label fw-bold"></label>
                    <input asp-for="NvkEmail" class="form-control" />
                    <span asp-validation-for="NvkEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NvkPhone" class="form-label fw-bold"></label>
                    <input asp-for="NvkPhone" class="form-control" />
                    <span asp-validation-for="NvkPhone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NvkAddress" class="form-label fw-bold"></label>
                    <input asp-for="NvkAddress" class="form-control" />
                    <span asp-validation-for="NvkAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NvkAvatar" class="form-label fw-bold"></label><br />
                    <img src="~/images/@Model.NvkAvatar" width="100" class="rounded mb-2 border" alt="Avatar hiện tại" />
                    <input type="file" name="NvkAvatarFile" class="form-control" />
                    <input type="hidden" asp-for="NvkAvatar" />
                </div>

                <div class="mb-3">
                    <label asp-for="NvkBirthday" class="form-label fw-bold"></label>
                    <input asp-for="NvkBirthday" class="form-control" type="date" />
                    <span asp-validation-for="NvkBirthday" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Giới tính</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="NvkGender" value="1" id="genderNam" />
                        <label class="form-check-label" for="genderNam">♂️ Nam</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="NvkGender" value="2" id="genderNu" />
                        <label class="form-check-label" for="genderNu">♀️ Nữ</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="NvkPassword" class="form-label fw-bold"></label>
                    <input asp-for="NvkPassword" class="form-control" type="text" />
                    <span asp-validation-for="NvkPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NvkFacebook" class="form-label fw-bold"></label>
                    <input asp-for="NvkFacebook" class="form-control" />
                    <span asp-validation-for="NvkFacebook" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="NvkIndexAccount" class="btn btn-secondary">⬅ Quay lại</a>
                    <button type="submit" class="btn btn-success">💾 Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
