                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="NvkStatus" value="2" id="statusInactive" />
                    <label class="form-check-label" for="statusInactive">Nghỉ</label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

