﻿
@{
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh sách thành viên</h2>
        <a href="NvkCreate" class="btn btn-primary">➕ Thêm mới</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>BirthDay</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>Status</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in ViewBag.nvkEmployee)
            {
                <tr>
                    <td>@m.NvkId</td>
                    <td>@m.NvkName</td>
                    <td>@m.NvkBirthDay.ToString("dd/MM/yyyy")</td>
                    <td>@m.NvkPhone</td>
                    <td>@m.NvkPhone</td>
                    <td>@m.NvkSalary</td>
                    <td class="@(m.NvkStatus == 1 ? "text-success" : "text-danger")">
                        @(m.NvkStatus == 1 ? "Đi làm" : "Nghỉ")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "NvkEdit", new { id = m.NvkId }) |
                        @Html.ActionLink("Details", "NvkDetails", new { id = m.NvkId }) |
                        @Html.ActionLink("Delete", "NvkDelete", new { id = m.NvkId }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>