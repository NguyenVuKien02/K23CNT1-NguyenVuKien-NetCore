@model Lesson05.Models.DataModels.NvkMember

<h2>Thêm mới thành viên</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/NvkMember/Create" method="post">
            <div class="form-group">
                <label class="control-label" for="NvkMemberId">Mã thành viên</label>
                <input class="form-control" type="text" id="NvkMemberId" name="NvkMemberId" value="" readonly />
            </div>

            <div class="form-group">
                <label class="control-label" for="NvkUserName">Tên đăng nhập</label>
                <input class="form-control" type="text" id="NvkUserName" name="NvkUserName" value="" />
            </div>

            <div class="form-group">
                <label class="control-label" for="NvkFullName">Họ và tên</label>
                <input class="form-control" type="text" id="NvkFullName" name="NvkFullName" value="" />
            </div>

            <div class="form-group">
                <label class="control-label" for="NvkPassword">Mật khẩu</label>
                <input class="form-control" type="password" id="NvkPassword" name="NvkPassword" value="" />
            </div>

            <div class="form-group">
                <label class="control-label" for="NvkEmail">Email</label>
                <input class="form-control" type="email" id="NvkEmail" name="NvkEmail" value="" />
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>

            <!-- CSRF Token -->
            <input name="__RequestVerificationToken" type="hidden" value="" />
        </form>
    </div>
</div>
